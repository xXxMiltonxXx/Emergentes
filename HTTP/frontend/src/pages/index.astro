---
import Layout from '../layouts/Layout.astro';
import SensorChart from '../components/SensorChart.jsx';

const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:5000/api/data';
---

<Layout title="IoT Dashboard - HTTP RESTful">
	<main>
		<h1>IoT Sensor Dashboard</h1>
		<p class="instructions">
			This dashboard displays live data from the IoT device simulator.
		</p>
		<SensorChart client:load apiUrl={apiUrl} />
	</main>
</Layout>